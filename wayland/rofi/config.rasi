* {
  black:      #000000;
  red:        #e06c75;
  green:      #98c379;
  yellow:     #e5c07b;
  blue:       #61afef;
  mangenta:   #c678dd;
  cyan:       #56b6c2;
  emphasis:   #5c6370;
  text:       #abb2bf;
  text-alt:   #abb2bf;
  fg:         #5c6370;
  bg:         #282c34;

  spacing: 0;
  background-color: transparent;

  font: "Fira Code 12";
  text-color: @text;
}

window {
  transparency: "real";
  fullscreen: false;
  background-color: @bg;
  border: 1px 1px 1px 1px;
  border-color: @blue;
}

mainbox {
  padding: 0 0;
}

inputbar {
  padding: 10px 0px 10px 8px;
  border: 0px 0px 1px 0px;
  border-color: @blue;
  children: [prompt, textbox-prompt-colon, entry, case-indicator];
  background-color: #2c313a;
}

prompt {
  padding: 5px 0px;
  text-color: @blue;
}

textbox-prompt-colon {
  padding: 5px 10px;
  expand: false;
  str: "â–º";
  text-color: @text-alt;
}

entry {
  padding: 5px 10px;
}

listview {
  spacing: 5px;
  dynamic: true;
  scrollbar: false;
  background-color: #2c313a;
}

element {
  padding: 5px;
  text-color: @text-alt;
  highlight: bold #95ee8f; /* green */
}

element selected {
  background-color: @emphasis;
  text-color: @text;
}

element urgent, element selected urgent {
  text-color: @red;
}

element active, element selected active {
  text-color: @purple;
}

message {
  padding: 5px;
  border-radius: 3px;
  background-color: @emphasis;
  border: 1px;
  border-color: @cyan;
}

button selected {
  padding: 5px;
  border-radius: 3px;
  background-color: @emphasis;
}
